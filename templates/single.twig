{% extends "base.twig" %}

{% block content %}
	<article class="prose lg:prose-lg mx-auto">
		<header class="mx-2 -mb-10">
			<h1 class="text-3xl lg:text-5xl text-gray-700 font-semibold">{{ post.title }}</h1>
			<div class="flex items-center space-x-2 -mt-12 text-sm">
				<img class="w-16 h-16 lg:w-20 lg:h-20 rounded-full ring-2 ring-gray-100" src="{{post.author.avatar.src}}" alt="">

				<div class="flex items-center">
					<a href="{{post.author.path}}">
						{{ post.author.name }}
					</a>
					<span>&bull;</span>
					<time class="capitalize" datetime="{{ post.date|date('Y-m-d H:i:s') }}">{{ post.date }}</time>
				</div>

			</div>
		</header>
		<div class="content">
			{{post.content}}
		</div>
	</article>
{% endblock %}
